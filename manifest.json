{
  "manifest_version": 2,
  "name": "Simple Weather",
  "version": "0.1",
  "description": "Easily check the current weather and even receive notifications when it is going to rain!",
  "homepage_url": "https://github.com/danitrod/simple-weather",
  "icons": {
    "48": "assets/icons/icon48.png"
  },
  "permissions": ["geolocation", "storage"],
  "options_ui": {
    "page": "options/index.html"
  },
  "browser_action": {
    "default_icon": "assets/icons/icon32.png",
    "default_title": "Simple Weather",
    "default_popup": "popup/index.html"
  }
}
